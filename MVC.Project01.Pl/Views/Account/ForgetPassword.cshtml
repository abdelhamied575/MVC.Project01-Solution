@model ForgetPasswordViewModel 


@{
    ViewData["Title"] = "ForgetPassword";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

<div class="main-agileinfo">
	<div class="agileits-top">
		<form action="SendResetPasswordUrl" method="post">
			<div asp-validation-summary="All" class="text-danger"></div>


			<input class="text email" asp-for="Email" placeholder="Email" required="">
			
			<input type="submit" value="Sent Code">
			<a asp-action="SignIn" asp-controller="Account" class="btn text-center">Cancel</a>

		</form>

	</div>
</div>


