
@model IEnumerable<UserViewModel>


@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

 

<h1>All Users</h1>
<br />
<br />

@* Start Search Input Form *@

<form asp-action="Index" class="m-3">

    <div class="row">

        <div class="col-8">
            <input type="search" id="Search" name="InputSearch" class="form-control" />

        </div>

        <div class="col-4">
            <input type="submit" value="Search" class="btn btn-success ">


        </div>

    </div>

</form>

@* End Search Input Form *@





@if (Model.Count() > 0)
{
    <table class="table table-hover table-striped">

        <thead>
            <tr>
                <th>@Html.DisplayNameFor(U=>U.Id)</th>
                <th>@Html.DisplayNameFor(U=>U.FirstName)</th>
                <th>@Html.DisplayNameFor(U=>U.LastName)</th>
                <th>@Html.DisplayNameFor(U=>U.Email)</th>
                <th>@Html.DisplayNameFor(U=>U.Roles  )</th>
              
                <th>
                    Details
                </th>
                <th>
                    Update
                </th>
                <th>
                    Delete
                </th>
            </tr>
        </thead>

        <tbody id="indexbody">

            @foreach (var user in Model)
            {

                <tr>

                     @* <td> <img src="~/Files/Images/@employee.ImageName" width="75" class="img-fluid rounded-circle" /> </td> *@

                    <td> @user.Id </td>
                    <td> @user.FirstName </td>
                    <td> @user.LastName </td>
                    <td> @user.Email </td>
                    <td> @foreach (var role in user.Roles)
                         {
                            <span class="rounded-pill bg-primary">@role</span>
                         }
                    </td>
                   

                    <Partial name="_ButtonPartialView" model="@user.Id" />



                </tr>

            }

        </tbody>


    </table>

}
else
{
    <h3 class="alert alert-danger">There is No Users </h3>
}




